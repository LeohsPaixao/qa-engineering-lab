<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <property name="severity" value="warning"/>

    <module name="SuppressionFilter">
        <property name="file" value="config/checkstyle/suppressions.xml"/>
        <property name="optional" value="false"/>
    </module>

    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <module name="NewlineAtEndOfFile"/>

    <module name="TreeWalker">

        <!-- Classe de teste deve terminar com Test -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*Test$"/>
        </module>

        <!-- Métodos estilo BDD -->
        <module name="MethodName">
            <property name="format"
                      value="^(should|when|given|test)[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <module name="AvoidStarImport"/>
        <module name="UnusedImports"/>

        <module name="MethodLength">
            <property name="max" value="30"/>
        </module>

        <module name="CyclomaticComplexity">
            <property name="max" value="8"/>
        </module>

        <!-- Anti-patterns -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="System\.out\.println"/>
            <property name="message" value="Use logger ao invés de System.out.println"/>
        </module>

        <module name="RegexpSinglelineJava">
            <property name="format" value="Thread\.sleep"/>
            <property name="message" value="Evite Thread.sleep em testes."/>
        </module>

    </module>
</module>